@using NoteTaking.Web.Common;
@using NoteTaking.Web.ViewModels;
@model List<NoteAllViewModel>
@{
    ViewData["Title"] = "All";
}

<partial name="_Notifications" />

<br />
<div class="all-notes-system">
    <div class="note-system-top">
        <form style="display:inline-block">
            <input type="submit" class="create-button" asp-action="HomePage" asp-controller="Home" value="Go back" />
        </form>
        <form method="get" asp-action="All" asp-controller="Home" style="display:inline-block">
            <div class="custom-select">
                <select id="sortOption" name="sortOption" onchange="this.form.submit()">
                    <option value="None">Select sort</option>
                    <option value="Latest">Latest</option>
                    <option value="Oldest">Oldest</option>
                    <option value="Title">Title</option>
                </select>
                <label>Sorted by: @SelectSortBoxInput._sortOption</label>
            </div>
        </form>
        <div class="search-box">
            <form asp-action="Search" asp-controller="Home" style="display:inline-block;">
                <input type="text" name="value" required />
                <input type="submit" value="Search" class="create-button" />
            </form>
            <form asp-action="Search" asp-controller="Home" style="display:inline-block;">
                <input type="submit" name="flag" value="Show all" class="create-button" style="margin-left: 5px;" />
            </form>
        </div>

    </div>
    <br />
    @if (Model.Any())
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Date</th>
                    <th width="300px"></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].Title</td>
                        <td>@Model[i].Date</td>
                        <td>
                            @*<div class="buttons-grid">
                    <a class="btn btn-danger" type="submit" asp-action="Delete" asp-controller="Home" asp-route-id="@Model[i].Id"> <i class="bi bi-trash"></i> Delete</a>
                    <a class="btn btn-warning" style="margin-left:10px; margin-right:10px" type="submit" asp-action="Edit" asp-controller="Home" asp-route-id="@Model[i].Id"> <i class="bi bi-pen"></i> Edit</a>
                    <a class="btn btn-info" type="submit" asp-action="Details" asp-controller="Home" asp-route-id="@Model[i].Id"> <i class="bi bi-info-circle"></i> Details</a>
                    </div>*@

                            <div class="dropdown">
                                <button class="dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="@Url.Action("Delete", "Home", new { id = Model[i].Id })">Delete</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Edit", "Home", new { id = Model[i].Id })">Edit</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Details", "Home", new { id = Model[i].Id })">Details</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>

                    <div class="note">
                        <h3 class="note-title">@Model[i].Title</h3>
                        <p class="note-text">snirgiaenivsnigugbivisuirgveievdrinhnavsrv</p>
                        <span class="note-date">@Model[i].Date</span>
                    </div>
                }
            </tbody>
        </table>

        <div class="note">
            <h3 class="note-title">Title</h3>
            <p class="note-text">snirgiaenivsnigugbivisuirgveievdrinhnavsrv</p>
            <span class="note-date">Some Date</span>
        </div>
    }
    else
    {
        <h2>Oops... You don't have any notes</h2>
    }
    <form>
        <div>
            <input type="submit" value="View deleted notes" class="btn btn-info" asp-action="AllDeletedNotes" asp-controller="Home" />
        </div>
    </form>
</div>

