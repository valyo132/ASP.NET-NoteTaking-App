@using NoteTaking.Web.ViewModels;
@model IList<NoteAllViewModel>
@{
    ViewData["Title"] = "All";
}

<partial name="_Notifications" />

<br />
<div class="all-notes-system">
    <form>
        <input type="submit" class="create-button" asp-action="Index" asp-controller="Home" value="Go back" />
    </form>
    <br />
    @if (Model.Any())
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Date</th>
                    <th width="300px"> </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            @(
                                i + 1
                                )
                        </td>
                        <td>@Model[i].Title</td>
                        <td>@Model[i].Date</td>
                        <td>
                            <div class="buttons-grid">
                                <a class="btn btn-danger" type="submit" asp-action="Delete" asp-controller="Home" asp-route-id="@Model[i].Id"> <i class="bi bi-trash-fill"></i> Delete</a>
                                <a class="btn btn-warning" type="submit" asp-action="Edit" asp-controller="Home" asp-route-id="@Model[i].Id">Edit</a>
                                <a class="btn btn-info" type="submit" asp-action="Details" asp-controller="Home" asp-route-id="@Model[i].Id">Details</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h2>Oops... You don't have any notes</h2>
    }
</div>
